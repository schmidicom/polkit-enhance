<policyconfig>

  <action id="org.gentoo.shell.bash">
    <message>Authentication is required to run "bash" with administratives rights.</message>
    <message xml:lang="de">Es ist eine Authentifizierung notwendig um "bash" mit Administratorenrechten auszufÃ¼hren.</message>
    <icon_name>gentoo</icon_name>
    <defaults>
      <allow_any>auth_admin_keep</allow_any>
      <allow_inactive>auth_admin_keep</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/bin/bash</annotate>
  </action>

</policyconfig>
